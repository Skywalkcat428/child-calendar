<div class="chat-header">
  <% if  %>
    <div class="left-header">
      <div class="chat-header-name">
        <%= @chat_room.name %>
      </div>
    </div>

    <div class="calendar-right-header">
      <div class="calendar-header-button">
        <%= link_to "カレンダールーム", root_path %>
      </div>
      <div class="calendar-header-button">
        <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
      </div>
    </div>
  <% end %>

  <div class="chat-right-header">
    <div class="chat-header-button">
      <%= link_to "チャットを終了する", room_path(@chat_room), method: :delete %>
    </div>
  </div>
</div>

<div class="messages">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@chat_room, @message], html: {class: "form"}, local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>