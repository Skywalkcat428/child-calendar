<div class="calendar-header"> <%#chat-header%>
  <div class="left-header">
    <div class="header-name">
      <%= link_to edit_user_path(current_user) do %>
        <%= current_user.name %>
      <% end %>
      <%#= @calendar_room.child_name %> さんのカレンダー
    </div>
  </div>
  
  <div class="right-header">
    <div class="header-button">
      <%= link_to "チャットルーム", chat_room_messages_path(chat_rooms_url) %>
    </div>
    <div class="header-button">
      <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'%>
    </div>
  </div>
</div>

<div class="calendar">
  <div id="calendar"></div>
  <script src="../../_common/scripts/jquery-3.4.1.min.js"></script>
  <%#= render partial: 'calendar', collection: @calendars %>
</div>

